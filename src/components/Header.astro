---
import ThemeIcon from '@components/ThemeIcon.astro';
import config from '@config/config.json';
import menu from '@config/menu.json';
import CloseIcon from '@icons/CloseIcon.astro';
import HamburgerIcon from '@icons/HamburgerIcon.astro';
import { Image } from 'astro:assets';

export interface NavigationLink {
  name: string;
  url: string;
}

const { main }: { main: NavigationLink[] } = menu;
---

<header class="bg-white/95 backdrop-blur-sm dark:bg-zinc-950/95 dark:backdrop-blur-sm print:hidden fixed inset-x-0 top-0 z-50 border-b border-zinc-200 dark:border-zinc-800">
  <nav class="mx-auto max-w-7xl px-6 sm:px-8 lg:px-12" aria-label="Global">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <Image
            src={config.site.logo}
            alt={config.site.title}
            class="h-8 w-8 rounded"
            width={512}
            height={512}
            decoding="async"
            loading="lazy"
          />
          <span class="text-lg font-semibold text-zinc-900 dark:text-white">{config.site.title}</span>
        </a>
      </div>
      
      <div class="hidden lg:flex lg:gap-x-12">
        {
          main?.map((menu) => (
            <a
              href={menu?.url}
              class="text-sm font-semibold leading-6 text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
            >
              {menu?.name}
            </a>
          ))
        }
      </div>
      
      <div class="flex items-center gap-x-4">
        {config.features.dark_mode && <ThemeIcon />}
        
        <!-- Mobile menu button -->
        <div class="flex lg:hidden">
          <button
            type="button"
            class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-zinc-400 hover:text-zinc-900 dark:hover:text-white"
            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          >
            <span class="sr-only">Open main menu</span>
            <HamburgerIcon />
          </button>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden lg:hidden">
    <div class="border-t border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-950">
      <div class="space-y-1 px-6 py-4">
        {
          main?.map((menu) => (
            <a
              href={menu?.url}
              class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-zinc-900 hover:bg-zinc-50 dark:text-white dark:hover:bg-zinc-800"
              onclick="document.getElementById('mobile-menu').classList.add('hidden')"
            >
              {menu?.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>
