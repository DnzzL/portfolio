import config from '@config/config.json';
const year = new Date().getFullYear();
---

<footer class="bg-white dark:bg-zinc-950 border-t border-zinc-200 dark:border-zinc-800 print:hidden">
  <div class="mx-auto max-w-7xl px-6 py-12 sm:px-8 sm:py-16 lg:px-12 lg:py-20">
    <div class="text-center">
      <p class="text-sm text-zinc-600 dark:text-zinc-400">
        &copy; {year} {config.site.title}. Built with passion in Nice, France.
      </p>
    </div>
  </div>
</footer>
