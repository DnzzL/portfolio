---
export interface Props {
  post: {
    categories: string;
    date: string;
    description: string;
    link: string;
    thumbnailImage: string;
    thumbnailImageAlt: string;
    title: string;
  };
}
const {
  title,
  description,
  categories,
  date,
  link,
  thumbnailImage,
  thumbnailImageAlt,
} = Astro.props.post;
---

<div class="flex flex-wrap py-8 md:flex-nowrap">
  <div class="flex flex-col flex-shrink-0 mb-6 md:w-64 md:mb-0">
    <span class="font-semibold text-gray-700 title-font">
      {categories}
    </span>
    <span class="mt-1 text-sm text-gray-500">
      {new Date(date).toDateString()}
    </span>
  </div>
  <div class="md:flex-grow">
    <h2 class="mb-2 text-2xl font-medium text-gray-900 title-font">
      {title}
    </h2>
    <p class="leading-relaxed">{description}</p>
    <a class="inline-flex items-center mt-4 text-red-500" href={link}>
      Learn More
      <svg
        class="w-4 h-4 ml-2"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M5 12h14"></path>
        <path d="M12 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>
