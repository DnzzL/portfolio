---
import BlogPostPreview from './BlogPostPreview.astro';
export interface Props {
  description: string;
  posts: any[];
}

const { description, posts } = Astro.props;
---

<section class="overflow-hidden text-gray-600 body-font">
  <div class="container px-5 py-10 mx-auto">
    <div class="flex flex-wrap w-full mb-20">
      <div class="w-full mb-6 lg:w-1/2 lg:mb-0">
        <h1
          class="mb-2 text-2xl font-medium text-gray-900 sm:text-3xl title-font"
        >
          Articles
        </h1>
        <div class="w-20 h-1 bg-yellow-300 rounded"></div>
      </div>
      <p class="w-full leading-relaxed text-gray-500 lg:w-1/2"></p>
    </div>
    <div class="-my-8 divide-y-2 divide-gray-100">
      {
        posts.map((post) => {
          const link = `/blog/${post.file.split('/').pop().split('.').shift()}`;
          return (
            <BlogPostPreview
              post={{
                title: post.frontmatter.title,
                description: post.frontmatter.description,
                categories: post.frontmatter.categories,
                date: post.frontmatter.date,
                link,
                thumbnailImage: post.frontmatter.thumbnailImage,
                thumbnailImageAlt: post.frontmatter.thumbnailImageAlt,
              }}
            />
          );
        })
      }
    </div>
  </div>
</section>
